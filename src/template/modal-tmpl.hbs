<div class="backdrop visually-hidden modal-container--js">
    <div class="modal-container is-closed">
        <button class="modal__close-btn" type="button">
            <svg class="modal__close-btn__svg" width="17" heigth="17"></svg>
        </button>
        <img class="modal-circle-img" src="{{images[0].url}}" alt="circle photo of the artist">
        <div class="modal-info-container">
            <img class="modal-large-img" src="{{images[1].url}}" alt="large photo of the artist">
            <ul class="modal-info-list">
                <li class="modal-info-list__item">
                    <h2 class="modal-info-list__title">info</h2>
                    <p class="modal-info-list__text">{{name}}</p>
                </li>
                <li class="modal-info-list__item">
                    <h2 class="modal-info-list__title">when</h2>
                    <p class="modal-info-list__text">{{dates.start.localDate}} {{dates.start.localTime}}<br>{{dates.timezone}}</p>
                </li>
                <li class="modal-info-list__item">
                    <h2 class="modal-info-list__title">where</h2>
                    <p class="modal-info-list__text">{{venues[0].city.name}} <br> {{venues[0].name}} </span>
                    </p>
                </li>
                <li class="modal-info-list__item">
                    <h2 class="modal-info-list__title">who</h2>
                    <p class="modal-info-list__text">{{_embedded.attractions[0].name}}</p>
                </li>
                <li class="modal-info-list__item">
                    <h2 class="modal-info-list__title">prices</h2>
                    <p class="modal-info-list__text">
                        <svg class="modal-barcode-svg" width="30" heigth="30"></svg>
                        Standart 300-500 UAH
                    </p>
                    <a class="buy-ticket-btn" href="{{this.url}}">buy tickets</a>
                    <p class="modal-info-list__text">
                        <svg class="modal-barcode-svg" width="30" heigth="30"></svg>
                        <span class="modal__to-uppercase">vip</span> 1000-1500 <span
                            class="modal__to-uppercase">uah</span>
                    </p>
                    <a class="buy-ticket-btn" href="{{this.url}}">buy tickets</a>
                </li>
            </ul>
        </div>
        <button class="modal__more-from-btn" type="button">more from this author</button>
    </div>
</div>